{
    "name": "supomation",
    "version": "0.0.42",
    "description": "Supomation CLI",
    "author": "PatEvs <ppevans11@gmail.com> (https://github.com/patevs)",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/patevs/supomation.git"
    },
    "main": "src/index.js",
    "scripts": {
        "clean": "trash node_modules",
        "start": "node src/index.js",
        "prettier": "prettier --check --write src/**/*.js && echo. && echo Prettier Completed!",
        "lint": "npm run prettier && eslint --fix src/**/*.js && echo. && echo Lint Completed!",
        "test": "jest && echo. && echo Test Complete! && exit 0",
        "docs": "cd scripts && gen-docs.cmd"
    },
    "ntl": {
        "descriptions": {
            "clean": "Deletes node_modules directory. Requires trash-cli to be installed globally",
            "start": "Start Supomation CLI",
            "prettier": "Run prettier check style linting",
            "lint": "Run eslint check style linting",
            "test": "Run Supomation tests",
            "docs": "Generate project documentation"
        }
    },
    "dependencies": {
        "axios": "^0.19.0",
        "boxen": "^4.1.0",
        "chalk": "^2.4.2",
        "cheerio": "^1.0.0-rc.3",
        "clear": "^0.1.0",
        "enquirer": "^2.3.1",
        "log-symbols": "^3.0.0",
        "multispinner": "^0.2.1"
    },
    "devDependencies": {
        "eslint": "^6.1.0",
        "eslint-config-prettier": "^6.0.0",
        "eslint-plugin-prettier": "^3.1.0",
        "jest": "^24.8.0",
        "prettier": "^1.18.2"
    },
    "eslintConfig": {
        "env": {
            "es6": true,
            "node": true,
            "jest": true
        },
        "extends": [
            "eslint:recommended",
            "prettier"
        ],
        "parserOptions": {
            "ecmaVersion": 2018
        },
        "plugins": [
            "prettier"
        ],
        "rules": {
            "quotes": [
                "error",
                "single"
            ],
            "semi": [
                "error",
                "always"
            ]
        }
    },
    "prettier": {
        "singleQuote": true,
        "semi": true
    }
}
