{
    "name": "supomation",
    "version": "0.0.43",
    "description": "Supomation CLI",
    "author": "PatEvs <ppevans11@gmail.com> (https://github.com/patevs)",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/patevs/supomation.git"
    },
    "engines": {
        "node": ">=12"
    },
    "main": "src/index.js",
    "scripts": {
        "clean": "trash node_modules docs",
        "start": "node src/index.js",
        "prettier": "prettier --check --write src/**/*.js && echo. && echo Prettier Completed!",
        "lint": "npm run prettier && eslint --fix src/**/*.js && echo. && echo Lint Completed!",
        "test": "jest && echo. && echo Test Complete! && exit 0",
        "docs": "cd scripts && gen-docs.cmd"
    },
    "ntl": {
        "descriptions": {
            "clean": "Deletes node_modules and docs directories. Requires trash-cli to be installed globally",
            "start": "Start Supomation CLI",
            "prettier": "Run prettier check style linting",
            "lint": "Run eslint check style linting",
            "test": "Run Supomation tests",
            "docs": "Generate project documentation"
        }
    },
    "devDependencies": {
        "@babel/cli": "^7.5.5",
        "@babel/core": "^7.5.5",
        "eslint": "^6.1.0",
        "eslint-config-prettier": "^6.0.0",
        "eslint-plugin-jest": "^22.15.0",
        "eslint-plugin-node": "^9.1.0",
        "eslint-plugin-prettier": "^3.1.0",
        "jest": "^24.8.0",
        "prettier": "^1.18.2"
    },
    "eslintConfig": {
        "env": {
            "es6": true,
            "node": true,
            "jest": true
        },
        "extends": [
            "eslint:recommended",
            "prettier",
            "plugin:jest/recommended",
            "plugin:node/recommended"
        ],
        "parserOptions": {
            "ecmaVersion": 2018
        },
        "plugins": [
            "prettier",
            "jest"
        ],
        "rules": {
            "quotes": [
                "error",
                "single"
            ],
            "semi": [
                "error",
                "always"
            ]
        }
    },
    "prettier": {
        "singleQuote": true,
        "semi": true
    }
}
